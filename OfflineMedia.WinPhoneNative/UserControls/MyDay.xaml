<UserControl
    x:Class="OfflineMedia.UserControls.MyDay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:myDayControls="using:OfflineMedia.UserControls.MyDayControls"
    mc:Ignorable="d"
    d:DesignHeight="800"
    d:DesignWidth="400"
    Foreground="White"
    DataContext="{Binding MyDayViewModel, Source={StaticResource Locator}}">

    <StackPanel>
        <StackPanel>
            <Grid Margin="0,0,0,4" Visibility="{Binding Forecast1.CurrentForecast, Converter={StaticResource ReferenceVisibillityEvaluator}}">
                <myDayControls:ForecastNew DataContext="{Binding Forecast1}" />
            </Grid>
            <Grid Margin="0,0,0,4" Visibility="{Binding Forecast2.CurrentForecast, Converter={StaticResource ReferenceVisibillityEvaluator}}">
                <myDayControls:ForecastNew DataContext="{Binding Forecast2}" />
            </Grid>
            <!--<myDayControls:Steps Margin="0,0,0,4" />-->
            <myDayControls:ToDo DataContext="{Binding }" />
        </StackPanel>
    </StackPanel>
</UserControl>
