<UserControl
    x:Class="Famoser.OfflineMedia.WinUniversal.UserControls.ArticlePageControls.Read"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dependecyProperties="using:Famoser.OfflineMedia.WinUniversal.DisplayHelper.DependecyProperties"
    mc:Ignorable="d"
    d:DesignHeight="1800"
    d:DesignWidth="400"
    d:DataContext="{Binding ArticlePageViewModel, Source={StaticResource Locator}}"
    >

    <Grid>
        <StackPanel>
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Command="{Binding MakeFontBiggerCommand}" Style="{ThemeResource FamoserDefaultButton}" >
                    <Button.Content>
                        <SymbolIcon Symbol="FontIncrease" />
                    </Button.Content>
                </Button>
                <Button Grid.Column="1" Command="{Binding MakeFontSmallerCommand}" Style="{ThemeResource FamoserDefaultButton}" >
                    <Button.Content>
                        <SymbolIcon Symbol="FontDecrease" />
                    </Button.Content>
                </Button>
                <Button Grid.Column="2" Command="{Binding FavoriteCommand}" Style="{ThemeResource FamoserDefaultButton}">
                    <Button.Content>
                        <SymbolIcon Symbol="{Binding Article.IsFavorite, Converter={StaticResource FavoriteIconConverter}}" />
                    </Button.Content>
                </Button>
                <Button Grid.Column="3" Command="{Binding OpenInBrowserCommand}" Style="{ThemeResource FamoserDefaultButton}">
                    <Button.Content>
                        <SymbolIcon Symbol="World" />
                    </Button.Content>
                </Button>
            </Grid>

            <StackPanel>
                <TextBlock Margin="8,20,8,10" Text="{Binding Article.Title}" Style="{ThemeResource FamoserTitleTextBlock}" />
                <TextBlock Margin="8,0,8,20" Text="{Binding Article.SubTitle}" Style="{ThemeResource FamoserSubTitleTextBlock}" />
            </StackPanel>

            <Grid MaxHeight="300" Visibility="{Binding Article.LeadImage, Mode=OneWay, Converter={StaticResource ReferenceToVisibilityConverter}}" HorizontalAlignment="Left">
                <Image Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" Source="{Binding Article.LeadImage.Image, Converter={StaticResource ByteToBitmapConverter}}" />
            </Grid>

            <Grid Visibility="{Binding Article.Teaser, Converter={StaticResource ReferenceToVisibilityConverter}}" >
                <TextBlock Style="{StaticResource FamoserBodyTextBlock}" FontSize="{Binding FontSize, Converter={StaticResource LeadFontSizeConverter}}" Text="{Binding Article.Teaser}" />
            </Grid>

            <Grid>
                <RichTextBlock Margin="8,15" IsTextSelectionEnabled="False"  dependecyProperties:Extensions.CustomContent="{Binding Article.Content}" dependecyProperties:Extensions.CustomFontFamily="{Binding FontFamily}" dependecyProperties:Extensions.CustomFontSize="{Binding FontSize}" />
            </Grid>

            <Grid Margin="0,4,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto"  />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid Margin="4,0,0,0" Height="40" Grid.Column="1" Grid.Row="1" >
                    <Button Margin="0,4,0,-10" Style="{ThemeResource FamoserDefaultButton}" >
                        <Button.Content>
                            <SymbolIcon Margin="0,7,0,0" Symbol="Up" />
                        </Button.Content>
                    </Button>
                </Grid>

                <Grid Grid.Row="0" Grid.ColumnSpan="2" Grid.Column="0" >
                    <RichTextBlock Margin="5,10" Grid.Column="0" Style="{StaticResource FamoserBodyRichTextBlock}">
                        <Paragraph>
                            <Bold >
                                <Run Text="{Binding Article.Author}" />
                            </Bold>
                            <Run Text=" - " />
                            <Run Text="{Binding Article.Feed.Source.Name}" />
                        </Paragraph>
                    </RichTextBlock>
                </Grid>

                <Grid Grid.Row="1" Grid.Column="0" Margin="0,4,0,0">
                    <RichTextBlock Grid.Column="0" Style="{StaticResource FamoserBodyRichTextBlock}">
                        <Paragraph>
                            <Run Text="{Binding Article.PublishDateTime, Converter={StaticResource DateTimeConverter}}" />
                            <Run Text=" - " />
                            <Run Text="{Binding TotalWords}" />
                            <Run Text=" " />
                            <Run Text="Words" />
                        </Paragraph>
                    </RichTextBlock>
                </Grid>
            </Grid>



        </StackPanel>
    </Grid>
</UserControl>
