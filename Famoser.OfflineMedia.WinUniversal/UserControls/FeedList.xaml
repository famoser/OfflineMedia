<UserControl
    x:Class="Famoser.OfflineMedia.WinUniversal.UserControls.FeedList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:userControls="using:Famoser.OfflineMedia.WinUniversal.UserControls"
    xmlns:controls="using:AppStudio.Uwp.Controls"
    mc:Ignorable="d"
    d:DataContext="{Binding MainPageViewModel.Sources[0], Source={StaticResource Locator}}">
    
    <UserControl.Resources>
        <DataTemplate x:Key="FeedDataTemplate">
            <Grid Padding="0,4,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <!--<RowDefinition Height="30" />-->
                    <!--<RowDefinition Height="auto" />-->
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Height="72" Background="{ThemeResource TextBackground}">
                    <TextBlock Text="{Binding Name, Mode=OneWay}" Style="{ThemeResource FamoserHeaderTextBlock}"  />
                </Grid>
                <Grid Grid.Row="1" Padding="0,8,0,0" Background="{ThemeResource SystemControlBackgroundAccentBrush}">
                    <userControls:ArticleList DataContext="{Binding ActiveArticles}" />
                </Grid>
                <!--<Grid Grid.Row="2" Margin="0,-20,0,0">
                    <Grid.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Transparent" Offset="0" />
                            <GradientStop Color="{ThemeResource TextBackgroundColor}" Offset="1" />
                        </LinearGradientBrush>
                    </Grid.Background>
                </Grid>
                <Grid Grid.Row="3" Background="{ThemeResource TextBackground}">
                    <TextBlock Text="more articles" TextAlignment="Center" Style="{ThemeResource FamoserSubHeaderTextBlock}"  />
                </Grid>-->
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <Grid Style="{ThemeResource ResponsiveGridViewBackgroundGridStyle}" Padding="4,0,0,0">
        <controls:ResponsiveGridView 
        ItemsSource="{Binding ActiveFeeds}"
        ItemTemplate="{StaticResource FeedDataTemplate}" 
        Style="{StaticResource ResponsiveGridViewFeedStyle}"
        ItemClickCommand="{Binding MainPageViewModel.SelectFeedCommand, Source={StaticResource Locator}}" />
    </Grid>

</UserControl>
