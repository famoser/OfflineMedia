<UserControl
    x:Class="Famoser.OfflineMedia.WinUniversal.UserControls.FeedList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:userControls="using:Famoser.OfflineMedia.WinUniversal.UserControls"
    mc:Ignorable="d"
    d:DataContext="{Binding MainPageViewModel.Sources[0], Source={StaticResource Locator}}">
    
    <Grid>
        <ListView Margin="0,0,0,-10" 
                  ScrollViewer.VerticalScrollMode="Enabled" 
                  SelectionMode="None" 
                  ItemsSource="{Binding ActiveFeeds}" 
                  SelectedItem="{Binding MainPageViewModel.SelectedFeed, Mode=TwoWay, Source={StaticResource Locator}}">
            <ListView.FooterTemplate>
                <DataTemplate>
                    <TextBlock Height="25" />
                </DataTemplate>
            </ListView.FooterTemplate>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <userControls:ArticleList Margin="0,0,0,10" DataContext="{Binding }" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>

</UserControl>
