<UserControl
    x:Class="Famoser.OfflineMedia.WinUniversal.UserControls.ProgressBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Height="4"
    DataContext="{Binding ProgressService, Source={StaticResource Locator}}">

    <ProgressBar Background="{ThemeResource AkzentLightBackgroundThemeBrush}" Foreground="{ThemeResource AkzentBackgroundThemeBrush}" IsIndeterminate="False" Value="{Binding PercentageProgressActiveValue, Mode=TwoWay}" Maximum="{Binding PercentageProgressMaxValue}" Height="4" />

</UserControl>
